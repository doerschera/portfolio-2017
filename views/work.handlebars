{{#each projects}}
<div class="project-wrapper" id="{{id}}">
  <div class="viewer">
    <img class="mobile-image" src="style/images/{{image}}" alt="RISD Welcome" />
    <video width="100%" height="80%" autoplay loop>
      <source src="style/videos/{{video}}" type="video/mp4" />
      <img src="style/images/{{image}}" title="Your browser does not support the <video> tag" />
    </video>
  </div>
  <div class="project-info">
    <div class="project-content">
      <h3 class="medium-title dark-teal">{{title}}</h3>
      <h4 class="small-title medium-teal">{{{skills}}}</h4>
      <p class="description tracking-kerning">
        {{description}}
      </p>
      <ul class="project-links">
        <a href="{{links.[0]}}"><li>code</li></a>
        <a href="{{links.[1]}}"><li>site</li></a>
      </ul>
    </div>
    <div class="arrow right-arrow" id="rightArrow">
      &rang;
    </div>
    <div class="arrow left-arrow" id="leftArrow">
      &lang;
    </div>
    <div class="hide-info x">
      &#x2613;
    </div>
    <div class="hide-info upArrow">
      show description &#x2303;
    </div>
  </div>
</div>
{{/each}}

<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<!-- local js -->
<script src="work.js"></script>
